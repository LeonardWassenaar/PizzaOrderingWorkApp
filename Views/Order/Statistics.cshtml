
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head >
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-3.5.1.slim.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/OrderingScript.js"></script>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />

    

    <title>Statistics</title>
</head>

<body class="centerBody1" style="background-color: #f5f5f5">
    <div class="container">
        <div>
            <p align="left"> @Html.ActionLink("Previous page", "Index", "Order", null, new { @class = "smallHeading" })</p>
            <h1 class="headingFontStyle mainHeading rounded">PIZZA ORDER STATS</h1>
            <br />
            <div>
                <table class="table table-dark rounded table-borderless">

                    <tr>
                        <th class="smallHeading">TOTAL PIZZA'S ORDERED BY TYPE</th>
                        <th class="smallHeading">TOTAL DRINK'S ORDERED BY TYPE</th>
                    </tr>
                    <tr>
                        <td>
                            @foreach (var item in ViewBag.GetPizzaOrders)
                            {
                                <span> @item</span>
                                <br />
                            }
                        </td>
                        <td>

                            @foreach (var item in ViewBag.GetDrinksOrders)
                            {
                                <span> @item</span>
                                <br />
                            }
                        </td>
                    </tr>
                    <tr> <td class="centerBody1 smallHeading"> @ViewBag.TotalOrders</td></tr>
                </table>
                <br />
                <br />
                <br />
                <h2 style="font-size:50px">&#9787; STAY HEALTHY!!!</h2>
                <div>
                    <div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</body>
</html>
