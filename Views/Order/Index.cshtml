
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/jquery-3.5.1.slim.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/OrderingScript.js"></script>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Site.css"  />
</head>

@model IEnumerable<PizzaOrderingWorkApp.Models.Order>
<body data-ng-app="OrderingScript" class="centerBody1" style="background-color: #f5f5f5">
    
    <div  data-ng-controller="orderControl">
        <h1 class= "headingFontStyle mainHeading rounded">PIZZA ANYONE?</h1>
        <div>
            <h3 class="text-black-50 centerBody1 font-weight-bold headingFontStyle">PLACE YOUR ODRDER</h3>
        </div>
        <div class="centerBody1 ">
            <table class="table table-dark table-striped rounded table-borderless">
                <tr>
                    <td class="smallHeading">Name:</td>
                   <td align="left"> <input class="form-group sizedText" id="Name" type="text" name="order.DeveloperName" data-ng-model="order.DeveloperName" /></td>
                </tr>
                
                <tr>
                    <td class="smallHeading">Pizza:</td>
                    <td align="left">
                        <select  class="form-group sizedText" id="Pizza" type="" name="order.Pizza" data-ng-model="order.Pizza">
                            <option value="Bacon">Bacon</option>
                            <option value="Onion">Onion</option>
                            <option value="Cheese">Cheese</option>
                            <option value="BaconCheese">Bacon&Cheese</option>
                    </select>
                    </td>
                </tr>

                <tr>
                    <td class="smallHeading">Drink:</td>
                    <td align="left">
                        <select class="form-group sizedText" id="Drink" type="text" name="order.Drink" data-ng-model="order.Drink">
                            <option value="Fanta">Fanta</option>
                            <option value="Coke">Coke</option>
                            <option value="Sprite">Sprite</option>
                            <option value="Pepsi">Pepsi</option>
                        </select>
                    </td>
                </tr>

                <tr>
                    <td class="smallHeading">Date:</td>
                    <td align="left"><input class="form-group sizedText" id="Date" type="date" name="order.Cur_Date" data-ng-model="order.Cur_Date" /></td>
                </tr>

                <tr>
                    <td align="right"><input class="rounded buttonSubmit" type="button" value="SUBMIT" name="btnSubmit" data-ng-click="savedata(order)" /> </td>

                    <td align="left">
                        <button class="buttonSubmit rounded" type="button" onclick="ClearFields();">
                        CLEAR INPUT FIELDS
                    </button>
                    </td> 
                </tr>
                
                
            </table>
        </div>
        <div>
            <h3 class="text-black-50 centerBody1 font-weight-bold headingFontStyle">ORDER HISTORY</h3>
        </div>
        <table class="table table-dark table-striped rounded table-borderless">
            <tr>
                <th class="smallHeading">@Html.DisplayNameFor(m => m.DeveloperName)</th>
                <th class="smallHeading">@Html.DisplayNameFor(m => m.Pizza)</th>
                <th class="smallHeading">@Html.DisplayNameFor(m => m.Drink)</th>
                <th class="smallHeading">@Html.DisplayNameFor(m => m.Cur_Date)</th>
            </tr>
            <tr data-ng-repeat="ordr in orders">
                <td>{{ordr.DeveloperName}}</td>
                <td>{{ordr.Pizza}}</td>
                <td>{{ordr.Drink}}</td>
                <td>{{ordr.Cur_Date}}</td>
            </tr>
        </table>
    </div>
</body>
</html>

<script>
    function ClearFields() {
        document.getElementById("Name").value = "";
        document.getElementById("Pizza").value = "";
        document.getElementById("Drink").value = "";
        document.getElementById("Date").value = "";
    }
</script>
